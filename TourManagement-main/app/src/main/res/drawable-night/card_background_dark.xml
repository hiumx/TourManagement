<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <gradient
        android:startColor="@color/card_background_dark"
        android:endColor="@color/surface_dark"
        android:angle="90" />

    <corners android:radius="16dp" />

    <stroke
        android:width="1dp"
        android:color="@color/border_color_dark" />

    <!-- Add subtle inner shadow effect -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />

</shape>

